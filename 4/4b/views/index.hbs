<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>One Piece Heroes</title>

    <link rel="stylesheet" href="/assets/styles/style.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    {{>navbar}}
    {{>alert}}

    <section class="d-flex justify-content-center p-3 pt-0 m-5 mt-4 gap-5 flex-wrap">
        {{#each heroes}}
        <div class="card" style="width: 16rem;" data-bs-theme="dark">
            <img src="{{this.photo}}" class="card-img-top object-fit-cover pt-3 p-2 pb-0 w-auto" alt="-image-heroes"
                style="height: 240px;">
            <div class="card-body">
                <h4 class="card-title fw-bold">{{this.hero_name}}</h4>
                {{#if (eq this.type_name 'Logia')}}
                <p class="card-text fw-bold text-primary">{{this.type_name}}</p>
                {{else if (eq this.type_name 'Paramecia')}}
                <p class="card-text fw-bold text-success">{{this.type_name}}</p>
                {{else if (eq this.type_name 'Zoan')}}
                <p class="card-text fw-bold text-warning">{{this.type_name}}</p>
                {{else if (eq this.type_name 'Paramecia Special')}}
                <p class="card-text fw-bold text-danger">{{this.type_name}}</p>
                {{else}}
                <p class="card-text fw-bold text-secondary">{{this.type_name}}</p>
                {{/if}}
                <a href="/detail/{{this.id}}" class="btn btn-danger w-100 fw-bold">Detail</a>
            </div>
        </div>
        {{/each}}
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>
    <script src="/assets/js/alert.js"></script>
</body>

</html>